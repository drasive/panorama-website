<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <targets>
        <target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log"
                layout="${longdate} ${uppercase:${level}} ${message}
                        ${exception:format==Message,Type,Method,StackTrace:separator=,:innerFormat=Message,Type,Method,StackTrace:innerExceptionSeparator=,:maxInnerExceptionLevel=99}" />
        <target name="console" xsi:type="Console"
                layout="${message}" />
    </targets>
    
    <rules>
        <logger name="UserInterface" minlevel="Info" writeTo="console" />
        <logger name="*" minlevel="Trace" writeTo="logfile" />
    </rules>
</nlog>
